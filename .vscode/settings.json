{
  "editor.formatOnSave": true,
  "editor.wordWrapColumn": 150,
  "editor.wordWrap": "wordWrapColumn",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.renderIndentGuides": true,
  "files.exclude": {
    "**/.git": true,
    "**/dist": true,
    "**/.compiled": true,
    "**/test-results": true,
    "**/node_modules": true,
    "**/*.lock.*": true,
    "**/Properties": true,
    "**/*.xproj*": true,
  },
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "html.format.enable": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/.compiled": true,
    "**/wwwroot": true
  },
  "beautify.language": {
    "js": {
      "type": [
        "json"
      ]
    },
    "css": [
      "css",
      "scss"
    ],
    "html": [
      "htm",
      "html"
    ]
  },
  "beautify.config": {
    "indent_size": 2,
    "wrap_attributes": "force-aligned",
    "newline_between_rules": false,
    "space_around_combinator": true,
    "unformatted": [
      "abbr",
      "area",
      "audio",
      "b",
      "bdi",
      "bdo",
      "br",
      "canvas",
      "cite",
      "code",
      "data",
      "datalist",
      "del",
      "dfn",
      "em",
      "embed",
      "i",
      "iframe",
      "img",
      "ins",
      "kbd",
      "keygen",
      "map",
      "mark",
      "math",
      "meter",
      "noscript",
      "object",
      "output",
      "progress",
      "q",
      "ruby",
      "s",
      "samp",
      "select",
      "sub",
      "sup",
      "svg",
      "template",
      "textarea",
      "time",
      "u",
      "var",
      "video",
      "wbr",
      "text",
      "acronym",
      "address",
      "big",
      "dt",
      "ins",
      "strike",
      "tt"
    ]
  },
  "stylelint.enable": true,
  "css.validate": false,
  "scss.validate": false
}
